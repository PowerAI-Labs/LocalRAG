# Application Settings
PROJECT_NAME=RAG Application
VERSION=1.0.0
API_V1_STR=/api/v1

# Ollama Settings
OLLAMA_API_URL=http://localhost:11434
DEFAULT_MODEL=deepseek-r1:8b

# Embedding Models
TEXT_EMBEDDING_MODEL=all-MiniLM-L6-v2
IMAGE_EMBEDDING_MODEL=google/vit-base-patch16-224

# Processing Settings
CHUNK_SIZE=10000
CHUNK_OVERLAP=100
BATCH_PROCESSING_SIZE_THRESHOLD=31457280  # 30MB in bytes
MAX_BATCH_WORKERS=4

# Rate Limiting
RATE_LIMIT_DURATION=60
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
DATA_DIR=./data
BATCH_TEMP_DIR=./data/batch_temp

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/rag_app.log

# Optional Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password